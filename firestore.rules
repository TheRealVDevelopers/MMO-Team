rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SUPER_ADMIN' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN');
    }

    // Vendors: root-level collection (separate branch, not per-organization)
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // HelpBot â€“ any authenticated user can create; creator can update (to add screenshot/voice URLs); only SUPER_ADMIN can read/update/delete
    match /errorReports/{reportId} {
      allow create: if isAuthenticated();
      allow read, delete: if isAuthenticated() &&
        get(/databases/$(database)/documents/staffUsers/$(request.auth.uid)).data.get('role', '') == 'SUPER_ADMIN';
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid
        || get(/databases/$(database)/documents/staffUsers/$(request.auth.uid)).data.get('role', '') == 'SUPER_ADMIN'
      );
    }

    // BASELINE SECURITY: Require authentication for everything
    match /{document=**} {
      allow read: if isAuthenticated();
      // Only allow writes if authenticated (can be tightened further)
      allow write: if isAuthenticated();
    }
    
    // Specific collection rules can be added here to override or refine
    // e.g., match /organizations/{orgId} { allow write: if isAdmin(); }
  }
}
